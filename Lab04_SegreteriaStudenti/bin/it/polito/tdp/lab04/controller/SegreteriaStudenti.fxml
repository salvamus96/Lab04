                  <TextField fx:id="txtMatricola" prefWidth="80.0" promptText="Matricola">
                     <HBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </HBox.margin>
                  </TextField>
                  <Button fx:id="btnCercaNomeCognome" mnemonicParsing="false" onAction="#doCercaNomeCognome" prefWidth="25.0" style="-fx-background-color: green;" text="âˆš" textFill="WHITE">
